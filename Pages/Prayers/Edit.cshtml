@page
@model prayer.Pages.Prayers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Prayer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Prayer.Id" />
            <div class="form-group">
                <label asp-for="Prayer.CategoryId" class="control-label"></label>
                <select asp-for="Prayer.CategoryId" class ="form-control" asp-items="Model.CategoryItems">
                    <option value="">-- Select a category --</option>
                </select>
                <span asp-validation-for="Prayer.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.Name" class="control-label"></label>
                <input asp-for="Prayer.Name" class="form-control" />
                <span asp-validation-for="Prayer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.Description" class="control-label"></label>
                <textarea asp-for="Prayer.Description" class="form-control"></textarea>
                <span asp-validation-for="Prayer.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.CreationTime" class="control-label"></label>
                <input asp-for="Prayer.CreationTime" class="form-control" disabled />
                <span asp-validation-for="Prayer.CreationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.UpdateTime" class="control-label"></label>
                <input asp-for="Prayer.UpdateTime" class="form-control" disabled />
                <span asp-validation-for="Prayer.UpdateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.Recurrence" class="control-label"></label>
                <select asp-for="Prayer.Recurrence" class="form-control" asp-items="Model.RecurrenceList"></select>
                <span asp-validation-for="Prayer.Recurrence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.RecurrenceValue" class="control-label"></label>
                <input asp-for="Prayer.RecurrenceValue" class="form-control" />
                <span asp-validation-for="Prayer.RecurrenceValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prayer.Status" class="control-label"></label>
                <select asp-for="Prayer.Status" class="form-control" asp-items="Model.StatusList"></select>
                <span asp-validation-for="Prayer.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
