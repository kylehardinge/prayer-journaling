@page
@model prayer.Pages.Prayers.AllModel

@{
    ViewData["Title"] = "All Prayers";
}

<h1>All Prayers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].CreationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].UpdateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].Recurrence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].RecurrenceValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].Category.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prayers[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prayers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recurrence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecurrenceValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Group.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
