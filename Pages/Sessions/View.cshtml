@page
@model prayer.Pages.Sessions.ViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Session</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Session.Id" />
        <div class="form-group">
            <label asp-for="Session.Notes" class="control-label"></label>
            <textarea asp-for="Session.Notes" class="form-control" rows=20> </textarea>
            <span asp-validation-for="Session.Notes" class="text-danger"></span>
        </div>
            <input asp-for="Session.StartTime" class="form-control" type="hidden" />
            <input asp-for="Session.User.Id" class="form-control" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SessionPrayers[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SessionPrayers[0].Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SessionPrayers) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="../Prayers/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="../Prayers/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="../Prayers/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Session.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
