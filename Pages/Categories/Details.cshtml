@page
@model prayer.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Group.Id)
        </dd>
    </dl>
    <table>
        @foreach (var prayer in Model.Prayers) {
        <td>
            @Html.DisplayFor(modelItem => prayer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => prayer.Description)
        </td>
        <td>
            <a asp-page="../Prayers/Edit" asp-route-id="@prayer.Id">Edit</a> |
            <a asp-page="../Prayers/Details" asp-route-id="@prayer.Id">Details</a> |
            <a asp-page="../Prayers/Delete" asp-route-id="@prayer.Id">Delete</a>
        </td>
        }
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
